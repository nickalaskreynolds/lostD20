<section class="main-column controls">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="number of-dice clearfix">
          <a href="javascript:void(0)" class="button button-secondary button-block change-amount-of-dice minus-one" tabindex="1"><span class="icon-remove"></span></a>
          <a href="javascript:void(0)" class="button button-secondary button-block change-amount-of-dice plus-one" tabindex="1"><span class="icon-add"></span></a>
          <input type="number" placeholder="1" maxlength="3" tabindex="1">
          <p>Dice</p>
          <a href="javascript:void(0)" class="button button-secondary button-block clear"><span class="icon-close"></span></a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <form class="dice-form clearfix">
          <label for="d2">
            <span class="label-text">d2</span>
            <input type="radio" name="dice-select" id="d2" class="dice-select" value="2" tabindex="1">
            <span class="diceIcon-d2"></span>
          </label>
          <label for="d3">
            <span class="label-text">d3</span>
            <input type="radio" name="dice-select" id="d3" class="dice-select" value="3" tabindex="1">
            <span class="diceIcon-d3"></span>
          </label>
          <label for="d4">
            <span class="label-text">d4</span>
            <input type="radio" name="dice-select" id="d4" class="dice-select" value="4" tabindex="1">
            <span class="diceIcon-d4"></span>
          </label>
          <label for="d6">
            <span class="label-text">d6</span>
            <input type="radio" name="dice-select" id="d6" class="dice-select" value="6" tabindex="1">
            <span class="diceIcon-d6"></span>
          </label>
          <label for="d8">
            <span class="label-text">d8</span>
            <input type="radio" name="dice-select" id="d8" class="dice-select" value="8" tabindex="1">
            <span class="diceIcon-d8"></span>
          </label>
          <label for="d10">
            <span class="label-text">d10</span>
            <input type="radio" name="dice-select" id="d10" class="dice-select" value="10" tabindex="1">
            <span class="diceIcon-d10"></span>
          </label>
          <label for="d12">
            <span class="label-text">d12</span>
            <input type="radio" name="dice-select" id="d12" class="dice-select" value="12" tabindex="1">
            <span class="diceIcon-d12"></span>
          </label>
          <label for="d20" class="active">
            <span class="label-text">d20</span>
            <input type="radio" name="dice-select" id="d20" class="dice-select" value="20" checked tabindex="1">
            <span class="diceIcon-d20"></span>
          </label>
          <label for="d100">
            <span class="label-text">d100</span>
            <input type="radio" name="dice-select" id="d100" class="dice-select" value="100" tabindex="1">
            <span class="diceIcon-d100"></span>
          </label>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <div class="number of-bonus clearfix">
          <a href="javascript:void(0)" class="button button-secondary button-block change-amount-of-bonus minus-one" tabindex="1"><span class="icon-remove"></span></a>
          <a href="javascript:void(0)" class="button button-secondary button-block change-amount-of-bonus plus-one" tabindex="1"><span class="icon-add"></span></a>
          <input type="number" placeholder="+0" maxlength="4" tabindex="1">
          <p>Bonus</p>
          <a href="javascript:void(0)" class="button button-secondary button-block clear"><span class="icon-close"></span></a>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-xs-offset-3">
        <a href="javascript:void(0)" class="button button-primary button-block go-roll" tabindex="1">Roll The Dice</a>
      </div>
    </div>
  </div>
</section>
